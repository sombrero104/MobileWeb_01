<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
	xmlns:beans="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
			http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security.xsd">
			
	<http use-expressions="true">
		<intercept-url pattern="/board/board" access="hasRole('ROLE_USER')" />
		<form-login login-page='/login/login' login-processing-url="/login/loginProcess" username-parameter="id" password-parameter="pw" />
		<csrf />
		<logout logout-url="/user/logout" logout-success-url="/login/login" />
	</http>
	
	<beans:bean id="customAuthenticationProvider" class="sample.support.CustomAuthenticationProvider" />
	<beans:bean id="customUserDetailsService" class="sample.service.CustomUserDetailsService" />
	<beans:bean id="passwordEncoder" class="org.springframework.security.crypto.bcrypt.BCryptPasswordEncoder" />
	
	<authentication-manager>  
		<authentication-provider  ref="customAuthenticationProvider" />
	</authentication-manager>
	
</beans:beans>
